 <table width="100%">
   <tr>
      <td>
          <h3>Search Results</h3>
      </td>
      <td align="right">       
        <%= form_tag :controller => 'books', :action => 'search', :method => 'get' do %>     
		     <%= text_field_tag :search, params[:search] %>
		     <%= submit_tag("Search") %>
		  <% end %>
      </td>	
   </tr>
</table> 
 
<table width="100%">
	<% if @books.size > 0 %>
		<% @books.each do |book| %>
		  <tr>
		  	<td>
			  <% if book.image_cover_url.blank? %>
			    <div class="no_thumbnail">No Image Available</div>
			  <% else %>
			   <div class="item_thumbnail"><%= image_tag book.image_cover_url %></div>
			  <% end %>
		  	<br />
		  	<span class="title"><%= link_to(book.title, book) %></span> by
		  	<%= link_to(book.author.name, author_path(book.author_id)) %>
		 </td>
		</tr>

		<% end %>
	<% else %>
	    <tr><td>No books matched your search.</td></tr>	
	<% end %>	
</table>


  