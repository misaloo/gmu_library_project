<%= render 'shared/flashes' %>
<article class="book">
  <header>
    <h2><%= @book.title %></h2>
  </header>
  <%= image_tag @book.image_cover_url %>
  <span>
  	<%= @book.abstract %>
  </span>

  <h3>Details</h3>
   <p><label>ISBN:</label> <%= @book.isbn %></p>
  <p><label>Author:</label> <%= @book.author_id %></p>
   <p><label>Genre:</label> <%= @book.genre %></p>
  <p><label>Pages:</label> <%= number_with_delimiter(@book.pages) %></p>
  <p><label>Published On:</label> <%= @book.published_on %></p>
  <p><label>Available to Reserve:</label> [# Reserved] out of <%= @book.total_in_library %></p>
</article>

<%= link_to 'All Books', books_path %> | <%= link_to 'Edit', edit_book_path(@book) %>
<br />
<%= button_to 'Delete', @book,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>