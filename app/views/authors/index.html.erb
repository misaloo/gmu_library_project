<h3>Authors</h3>
<table width="100%">
 <% @authors.each do |author| %>
 <tr>
    <td>
    <% if author.image_url.blank? %>
      <div class="no_thumbnail">No Image Available</div>
    <% else %>
     <div class="item_thumbnail"><%= image_tag author.image_url %></div>
    <% end %>
    <br />
    <span class="title"><%= link_to(author.name, author) %></span>
 </td>
</tr>
<% end %>
</table>


